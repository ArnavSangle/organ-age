{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "pdflatex-1",
      "type": "shell",
      "command": "pdflatex",
      "args": [
        "-interaction=nonstopmode",
        "-synctex=1",
        "Paper.tex"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "bibtex",
      "type": "shell",
      "command": "bibtex",
      "args": [
        "Paper"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "pdflatex-2",
      "type": "shell",
      "command": "pdflatex",
      "args": [
        "-interaction=nonstopmode",
        "-synctex=1",
        "Paper.tex"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "pdflatex-3",
      "type": "shell",
      "command": "pdflatex",
      "args": [
        "-interaction=nonstopmode",
        "-synctex=1",
        "Paper.tex"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Build LaTeX (pdf+bib)",
      "dependsOn": [
        "pdflatex-1",
        "bibtex",
        "pdflatex-2",
        "pdflatex-3"
      ],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
